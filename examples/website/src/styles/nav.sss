:root {
  --goldenRod: #EC9222;
  --wheat: #F1CA9B;
  --sienna: #8A5538;
  --white: #FBFBFB;
  --darkGray: #A4A0A1;
}

@custom-media --small (max-width: 1024px);
@custom-media --normal (min-width: 1025px);
@custom-media --huge (min-width: 1921px);

nav {
  position: absolute;
  padding: 20px 0 0 20px;
  z-index: 2;
  a, i {
    color: var(--sienna);
  }
}

a {
  margin-right: 20px;
  text-decoration: none;
}
